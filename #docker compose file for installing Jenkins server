
#docker compose file for installing Jenkins server
version: '3.8'

services:
  jenkins:
    image: jenkins/jenkins:lts
    privileged: true
    user: root
    networks:
      - network01
    ports:
      - "8080:8080"
      - "50000:50000"
    container_name: jenkins
    volumes:
      - /var/lib/docker/volumes/jenkins/_data:/var/jenkins_home
      - /var/run/docker.sock:/var/run/docker.sock

networks:
  network01:
    driver: bridge
